{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Liike",
  "version": "1.0.8",
  "identifier": "com.kuulto.liike",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm prepare-ffmpeg && pnpm dev",
    "beforeBuildCommand": "pnpm build && pnpm prepare-ffmpeg"
  },
  "app": {
    "windows": [
      {
        "title": "Liike",
        "width": 1280,
        "height": 800,
        "resizable": false,
        "maximized": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "signingIdentity": "Developer ID Application: selcuk sarikoz (S29MS2CJC7)"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["bin/ffmpeg"]
  }
}
